<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="@drawable/gradient_list"
        android:id="@+id/theLayout">

    <TextView
            android:text="JiPlace"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="44sp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" android:layout_marginTop="36dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingPrefix"
            fontPath="fonts/true-crimes.ttf"
            tools:text="JiPlace"
    />
    <TextView
            android:text="...."
            android:id="@+id/locationTV"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="44sp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="260dp"
            android:layout_marginStart="260dp" android:layout_marginTop="36dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingPrefix"
            fontPath="fonts/true-crimes.ttf"
            tools:text="JiPlace"
    />

    <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/theAnim"
            android:layout_width="300dp"
            android:layout_height="300dp"
            app:lottie_autoPlay="false"
            app:lottie_loop="false"
            app:lottie_fileName="fluid_loading_animation.json"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/theChecked"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:lottie_autoPlay="false"
            app:lottie_loop="false"
            app:lottie_fileName="check.json"
            android:layout_marginTop="9dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="26dp" android:layout_marginRight="26dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.569"
            app:layout_constraintVertical_bias="0.499"/>
    <Button
            android:background="@drawable/pretty_button"
            android:id="@+id/dismissButton"
            android:text="@string/dismiss_jiplace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/theChecked" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="180dp" android:layout_marginRight="180dp"
            app:layout_constraintVertical_bias="0.142"/>



</androidx.constraintlayout.widget.ConstraintLayout>